{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "bundler",
        "target": "ES2017",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "declarationMap": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@nitrokit/core": ["./src"],
            "@nitrokit/core/*": ["./src/*"]
        },
        "allowJs": true,
        "checkJs": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "src/**/*.test.ts"]
}
